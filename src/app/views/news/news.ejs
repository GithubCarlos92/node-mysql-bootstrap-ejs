<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Node JS + MySql</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>

<body>
    <nav class="navbar navbar-dark bg-dark">
        <a href="#" class="navbar-brand auto mx-auto">Noticias</a>
    </nav>


    <div class="container">

        <div class="row">
            <div class="col-md-6 mt-4 card">
                <form action="/news" method="post">
                    <h3 class="card-title"> Agregar Noticias</h3>
                    <div class="form-group">
                        <input class="form-control" type="text" name="title" id="title" placeholder="Ingrese Titulo">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="news" placeholder="Ingrese Noticia">
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-primary">
                    </div>
                </form>
            </div>

            <div class="col-md-6 mt-4 text-center">
                <table class="table table-striped">
                    <tr>
                        <th>ITEM</th>
                        <th>TITULO</th>
                        <th>NOTICIAS</th>
                    </tr>
                    <% for(var i=0;i < news.length;i++){ %>
                    <tr>
                        <td><%= news[i].id_news %></td>
                        <td><%= news[i].title %></td>
                        <td><%= news[i].news %></td>
                    </tr>
                    <%}%> 
            </table>
        </div>
    </div>

</div>
<script>
    document.getElementById('title').focus();
</script>
</body>

</html>